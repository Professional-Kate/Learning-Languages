<div class="m-3">
    <h1 class="mb-3 text-center">Add new contact</h1>
    <!-- Go to the ContactController then call the Add method what has a method of Post-->
    @using (Html.BeginForm("Add", "Contact", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.EditorFor(contact => contact, null, "newContact", new {htmlAttributes = new {@class = "form-control"}})
        </div>
        <button type="submit" id="submit-button" class="btn btn-primary">Add contact!</button>
    }
</div>
