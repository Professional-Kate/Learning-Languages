@model Contact

<div class="m-3">
    <h1 class="mb-3 text-center">Contact Details</h1>
    @Html.EditorFor(contact => contact, null, "contact", new {htmlAttributes = new {@class = "form-control", @readonly="true"}})
    <!-- Go to the ContactController then call the Add method what has a method of Post-->
    @using (Html.BeginForm("Delete", "Contact", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.EditorFor(contact => contact.Id, null, "id", new {htmlAttributes = new {@class = "form-control", @hidden="true"}})
        </div>
        <button type="submit" id="submit-button" class="btn btn-danger">Remove this contact...</button>
    }
</div>
